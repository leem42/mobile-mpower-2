<Page  xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
   <StackLayout>
    <!-- Your UI components go here -->

    <Label text="You would be a great fit for the mPower study!" textWrap="true"> </Label>
    <Label text="We'd just know a couple more things about you to make sure you're eligible" 
    textWrap="true" class="subtext"></Label>

    <Label text="I am some age"> </Label>
    <Label text="{{ age }}"></Label>

     <Label text="I live in "> </Label>
     <TextField id="location"  hint="enter country of origin"> </TextField>
     
    <Button text="Next" tap="callNext"> </Button>
    
    </StackLayout>
</Page>